@{
    ViewData["Title"] = "Privacy Policy";
}

<section class="text-gray-600 body-font">
    <div class="container px-5 py-24 mx-auto">
        <div class="flex flex-wrap w-full mb-20 flex-col items-center text-center">
            <h1 class="sm:text-3xl text-2xl font-medium title-font mb-2 text-gray-900 mb-14">RSA Cracker</h1>

            <div class="w-full mt-6">
                <span class="text-2xl mr-3">p</span>
                <input id="p" placeholder="p" class="w-1/3 bg-gray-100 bg-opacity-50 rounded border border-gray-300 focus:border-indigo-500 focus:bg-white focus:outline-none text-base outline-none text-gray-700 py-1 px-3 leading-8 transition-colors duration-200 ease-in-out mb-6"/>
            </div>
            <div class="w-full">
                <span class="text-2xl mr-3">q</span>
                <input id="q" placeholder="q" class="w-1/3 bg-gray-100 bg-opacity-50 rounded border border-gray-300 focus:border-indigo-500 focus:bg-white focus:outline-none text-base outline-none text-gray-700 py-1 px-3 leading-8 transition-colors duration-200 ease-in-out mb-6"/>
            </div>
            <div class="w-full">
                <span class="text-2xl mr-3">e</span>
                <input id="e" placeholder="e" value="65537" class="w-1/3 bg-gray-100 bg-opacity-50 rounded border border-gray-300 focus:border-indigo-500 focus:bg-white focus:outline-none text-base outline-none text-gray-700 py-1 px-3 leading-8 transition-colors duration-200 ease-in-out mb-6"/>
            </div>
            <div class="w-full">
                <span class="text-2xl mr-3">ct</span>
                <input id="ct" placeholder="e" class="w-1/3 bg-gray-100 bg-opacity-50 rounded border border-gray-300 focus:border-indigo-500 focus:bg-white focus:outline-none text-base outline-none text-gray-700 py-1 px-3 leading-8 transition-colors duration-200 ease-in-out mb-6"/>
            </div>

            <button id="subBtn" onclick="crackRSA()" class="mb-6 flex mx-auto text-white bg-indigo-500 border-0 py-2 px-8 focus:outline-none hover:bg-indigo-600 rounded text-lg">Submit</button>
            <div class="w-full">
                <span class="text-2xl mr-3">N</span>
                <input id="N" placeholder="e" class="w-1/3 bg-gray-100 bg-opacity-50 rounded border border-gray-300 focus:border-indigo-500 focus:bg-white focus:outline-none text-base outline-none text-gray-700 py-1 px-3 leading-8 transition-colors duration-200 ease-in-out mb-6"/>
            </div>
            <div class="w-full">
                <span class="text-2xl mr-3">d</span>
                <input id="d" placeholder="e" class="w-1/3 bg-gray-100 bg-opacity-50 rounded border border-gray-300 focus:border-indigo-500 focus:bg-white focus:outline-none text-base outline-none text-gray-700 py-1 px-3 leading-8 transition-colors duration-200 ease-in-out mb-6"/>
            </div>
            <div class="w-full">
                <span class="text-2xl mr-3">pt</span>
                <input id="pt" placeholder="e" class="w-1/3 bg-gray-100 bg-opacity-50 rounded border border-gray-300 focus:border-indigo-500 focus:bg-white focus:outline-none text-base outline-none text-gray-700 py-1 px-3 leading-8 transition-colors duration-200 ease-in-out mb-6"/>
            </div>
            <div class="w-full">
                <span class="text-2xl mr-3">pt ascii</span>
                <textarea id="pta" placeholder="e" wrap="hard" class="w-1/3 bg-gray-100 bg-opacity-50 rounded border border-gray-300 focus:border-indigo-500 focus:bg-white focus:outline-none text-base outline-none text-gray-700 py-1 px-3 leading-8 transition-colors duration-200 ease-in-out mb-6"></textarea>

            </div>


        </div>
    </div>
</section>
<style>
    textarea {
      overflow: hidden;
      height: 50px;
      padding: 0;
      resize: none;
    }
    
</style>

<script>
$('textarea').height(50).height($('textarea')[0].scrollHeight);
$('textarea').on('input', function() {
  $(this)
    .height(50)
    .height(this.scrollHeight);
});

let params = new URLSearchParams(location.search);
let p = params.get('p')
let q = params.get('q')

if (p != null && q != null) {
    document.getElementById('p').value = p
    document.getElementById('q').value = q
}

function crackRSA() {
        $.ajax({
            url: "/api/Decipher",
            type: "POST",
            data: {
                "e": $('#e').val(),
                "p": $('#p').val(),
                "q": $('#q').val(),
                "ct": $('#ct').val()
            },
            success: function(data) {
               console.log(data)
                $('#N').val(data['N'])
                $('#d').val(data['d'])
                $('#pt').val(data['pt'])
                $('#pta').val(data['ptAscii'])
                $('textarea').height(50).height($('textarea')[0].scrollHeight);
            }
        });
    }

</script>