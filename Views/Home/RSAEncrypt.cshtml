@{
    <!-- Updates the title -->
    ViewData["Title"] = "RSA Encrypter";
}

<section class="text-gray-600 body-font h-min">
    <!-- Tailwind automatically creates sufficient margin to sides with "container" -->
    <div class="container px-5 pt-12 mx-auto">
        <div class="flex flex-wrap w-full mb-20 flex-col items-center text-center">
            <h1 class="sm:text-3xl text-2xl font-medium title-font mb-2 text-gray-900 dark:text-gray-50 mb-12">RSA Encrypter</h1>

            <!-- Prime input field and HEX/Decimal toggle -->
            <div class="w-full">
                <span class="text-2xl mr-3 dark:text-gray-100">N</span>
                <input id="N" placeholder="N" class="dark:bg-gray-600 dark:bg-opacity-20 focus:bg-transparent focus:ring-2 focus:ring-indigo-900 rounded border dark:border-gray-600 border-gray-300 focus:border-indigo-500 text-base outline-none dark:text-gray-100 py-1 px-3 leading-8 transition-colors duration-200 ease-in-out w-2/3"/>
            </div>
            <div class="w-full mt-6">
                <span class="text-2xl mr-3 dark:text-gray-100">e</span>
                <input id="e" placeholder="e" class="dark:bg-gray-600 dark:bg-opacity-20 focus:bg-transparent focus:ring-2 focus:ring-indigo-900 rounded border dark:border-gray-600 border-gray-300 focus:border-indigo-500 text-base outline-none dark:text-gray-100 py-1 px-3 leading-8 transition-colors duration-200 ease-in-out w-2/3"/>
            </div>
            <div class="w-full mt-6 mb-2">
                <span class="text-2xl mr-3 dark:text-gray-100">pt</span>
                <input id="pt" placeholder="pt" class="dark:bg-gray-600 dark:bg-opacity-20 focus:bg-transparent focus:ring-2 focus:ring-indigo-900 rounded border dark:border-gray-600 border-gray-300 focus:border-indigo-500 text-base outline-none dark:text-gray-100 py-1 px-3 leading-8 transition-colors duration-200 ease-in-out w-2/3"/>
            </div>
            <ul id="inputRadio" class="items-center w-1/2 text-sm font-medium text-gray-900 bg-white rounded-lg border border-gray-200 sm:flex dark:bg-gray-700 dark:border-gray-600 dark:text-white mb-4">
                <li class="w-full border-b border-gray-200 sm:border-b-0 sm:border-r dark:border-gray-600 rounded-l-lg bg-indigo-500">
                    <div class="flex items-center ">
                        <input id="cASCII" checked type="radio" value="0" name="list-radio" class="hidden text-blue-600 bg-gray-100 border-gray-300 focus:ring-blue-500 dark:focus:ring-blue-600 dark:ring-offset-gray-700 focus:ring-2 dark:bg-gray-600 dark:border-gray-500">
                        <label for="cASCII" class="cursor-pointer py-3 ml-2 w-full text-sm font-medium text-gray-900 dark:text-gray-300">ASCII</label>
                    </div>
                </li> 
                <li class="w-full border-b border-gray-200 sm:border-b-0 sm:border-r dark:border-gray-600">
                    <div class="flex items-center ">
                        <input id="cDecimal" type="radio" value="1" name="list-radio" class="hidden text-blue-600 bg-gray-100 border-gray-300 focus:ring-blue-500 dark:focus:ring-blue-600 dark:ring-offset-gray-700 focus:ring-2 dark:bg-gray-600 dark:border-gray-500">
                        <label for="cDecimal" class="cursor-pointer py-3 ml-2 w-full text-sm font-medium text-gray-900 dark:text-gray-300">Decimal</label>
                    </div>
                </li>
                <li class="w-full dark:border-gray-600 rounded-r-lg">
                    <div class="flex items-center">
                        <input id="cHEX" type="radio" value="2" name="list-radio" class="hidden text-blue-600 bg-gray-100 border-gray-300 focus:ring-blue-500 dark:focus:ring-blue-600 dark:ring-offset-gray-700 focus:ring-2 dark:bg-gray-600 dark:border-gray-500">
                        <label for="cHEX" class="cursor-pointer py-3 ml-2 w-full text-sm font-medium text-gray-900 dark:text-gray-300">HEX</label>
                    </div>
                </li>
            </ul>
            <button id="subBtn" onclick="encrypt()" class="mb-6 flex mx-auto text-white bg-indigo-500 border-0 py-2 px-8 focus:outline-none hover:bg-indigo-600 rounded text-lg">Submit</button>


            <div class="box w-2/3">
                <input id="c" placeholder="c" class="dark:bg-gray-600 dark:bg-opacity-20 focus:bg-transparent focus:ring-2 focus:ring-indigo-900 rounded border dark:border-gray-600 border-gray-300 focus:border-indigo-500 text-base outline-none dark:text-gray-100 py-1 px-3 leading-8 transition-colors duration-200 ease-in-out w-2/3"/>
            </div>

            <button class="rounded px-3 py-2 mt-4 inline-flex dark:text-gray-300 text-gray-600 dark:bg-gray-700 bg-gray-200 py-2 px-6 focus:outline-none dark:hover:bg-gray-600 hover:bg-gray-300 dark:hover:text-white rounded text-lg transition-colors duration-200 ease-in-out" onclick="sendToRSACrack()" id="redirectRSA">Send to RSA Cracker</button>

            <!-- Snackbar that displays that displays error messages -->
            <div id="snackbar" class="flex items-center p-4 w-full max-w-xs text-gray-500 bg-white rounded-lg shadow dark:text-gray-400 dark:bg-gray-800">
                <div class="inline-flex flex-shrink-0 justify-center items-center w-8 h-8 text-orange-500 bg-orange-100 rounded-lg dark:bg-orange-700 dark:text-orange-200">
                    <svg aria-hidden="true" class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg">
                        <path fill-rule="evenodd" d="M8.257 3.099c.765-1.36 2.722-1.36 3.486 0l5.58 9.92c.75 1.334-.213 2.98-1.742 2.98H4.42c-1.53 0-2.493-1.646-1.743-2.98l5.58-9.92zM11 13a1 1 0 11-2 0 1 1 0 012 0zm-1-8a1 1 0 00-1 1v3a1 1 0 002 0V6a1 1 0 00-1-1z" clip-rule="evenodd"></path>
                    </svg>
                </div>
                <div id="failText" class="ml-3 font-normal"></div>
            </div>

        </div>
    </div>
</section>

<style>

    /* Snackbar special styling */
    #snackbar {
    visibility: hidden;
    position: fixed;
    z-index: 400;
    left: 20px;
    bottom: 50px;
    }

    .show-bar {
    visibility: visible !important;
    animation: fadein 0.5s, fadeout 0.5s 4.5s;
    }

    /* Snackbar styling */
    @@keyframes fadein {
        from {
            bottom: 0;
            opacity: 0;
        }
        to {
            bottom: 50px;
            opacity: 1;
        }
    }

    @@keyframes fadeout {
        from {
            bottom: 50px;
            opacity: 1;
        }
        to {
            bottom: 0;
            opacity: 0;
        }
    }
</style>


<script>
    $(document).ready(function() {
      //change colour when radio is selected
      $('#inputRadio input:radio').change(function() {
        // Only remove the class in the specific `box` that contains the radio
        $('li.bg-indigo-500').removeClass('bg-indigo-500');
        $(this).closest('li').addClass('bg-indigo-500');

      });
    });

    // Shows the snackbar for 5 seconds
    function showSnackbar(message) {
        $("#failText").text(message);
        $("#snackbar").addClass("show-bar");
        setTimeout(function () {
            $("#snackbar").removeClass("show-bar");
        }, 5000);
    }

    // Hextoggle button styling change
    $("#HEXToggle").click(function() {
        if($("#Decimal").css("font-weight") == 400) {
            $("#Decimal").css("font-weight", "bold");
            $("#HEX").css("font-weight", "normal");
        } else {
            $("#Decimal").css("font-weight", "normal");
            $("#HEX").css("font-weight", "bold");
        }
    });
    
    // Checks if number is pasted and automatically changes state to hex if hex is pasted
    $("#num").bind('paste', function(e) {
        let data = e.originalEvent.clipboardData.getData('text');
        if (/[A-Za-z]/g.test(data)) {  // Check if pasted value is hex
            $("#Decimal").css("font-weight", "normal");
            $("#HEX").css("font-weight", "bold");
        }
        else{
            $("#Decimal").css("font-weight", "bold");
            $("#HEX").css("font-weight", "normal");
        }
    });
    
    // Submits form if enter is pressed
    $("#num").keypress(function(event) {
        if (event.keyCode === 13) {
            encrypt();
        }
    });
    
    // Sends the value to crack site with the calculated values
    function sendToRSACrack() {
        let location = "/Home/RSACrack"
        let p = $("#p").val();
        let q = $("#q").val();
        if (p !== "" && q !== "") {
            location += `?p=${p}&q=${q}`;
        }
        window.location.href = location;
    }
    
    
    // Sends the data to backend with AJAX call and displays the returned result
    // If it returns an error, it displays an error message
    function encrypt() {
        let N = $("#N").val();
        let e = $("#e").val();
        let pt = $("#pt").val();
        let inputType = $("input[name='list-radio']:checked").val();
        console.log(inputType);
        
        if (N.substring(0, 2) == "0x"){
            console.log("bruh");
            $("#Decimal").css("font-weight", "normal");
            $("#HEX").css("font-weight", "bold");
        }
        
        if (!N.match(/^[0-9]+$/g) && $("#Decimal").css("font-weight") == 700) {
            showSnackbar("Please enter a valid number");
            return;
        }
        
        $.ajax({
            url: "/api/Encrypt",
            type: "POST",
            data: {
                "N": N,
                "e": e,
                "pt": pt,
                "inputType": inputType
            },
            success: function(data) {
                console.log(data);
                $("#c").val(data);
            }
        });
    }



</script>