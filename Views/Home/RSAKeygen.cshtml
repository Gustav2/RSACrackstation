                <div class="box col-start-4 col-span-2">
                    <button id="subBtn" onclick="encrypt()" class="flex w-full text-center mx-auto text-white bg-indigo-500 border-0 py-2 px-8 focus:outline-none hover:bg-indigo-600 rounded text-lg">Submit</button>
                </div>
                <div class="box col-span-2">
                    5
                </div>
                <div class="box col-start-1">6</div>
                <div class="box col-span-4">7</div>
                <div class="box">8</div>
                <div class="box col-span-4">9</div>
                <div class="box">10</div>
                <div class="box col-span-6">11</div>
                <div class="box">12</div>
                <div class="box col-span-2">13</div>
                <div class="box col-span-10">14</div>
