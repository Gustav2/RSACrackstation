@{
    <!-- Updates the title -->
    ViewData["Title"] = "Prime factorization";
}

<section class="text-gray-600 body-font h-min">
    <!-- Tailwind automatically creates sufficient margin to sides with "container" -->
    <div class="container px-5 pt-20 mx-auto">
        <div class="flex flex-wrap w-full mb-20 flex-col items-center text-center">
            <h1 class="sm:text-3xl text-2xl font-medium title-font mb-2 text-gray-900 dark:text-gray-50 mb-14">Prime Factorization</h1>

            <!-- Prime input field and HEX/Decimal toggle -->
            <div class="w-full flex flex-wrap justify-center">
                <input id="num" placeholder="Input number to factorize" class="mb-4 dark:bg-gray-600 dark:bg-opacity-20 focus:bg-transparent focus:ring-2 focus:ring-indigo-900 rounded border dark:border-gray-600 border-gray-300 focus:border-indigo-500 text-base outline-none dark:text-gray-100 py-1 px-3 leading-8 transition-colors duration-200 ease-in-out basis-full md:basis-2/3 mr-3"/>
                <div class="w-fit dark:text-white">
                    <button id="hexToggle" class="border-2 border-gray-700 rounded-xl flex p-0.5 gap-1 font-bold -translate-y-1" onclick="updateHexToggle()" data-tooltip-target="hexTooltip">
                        <span class="bg-indigo-500 p-2 rounded-lg">10</span>
                        <span class="bg-transparent p-2 rounded-lg">16</span>
                    </button>
                </div>

                <div id="hexTooltip" role="tooltip" class="w-36 -translate-x-1/2 absolute invisible z-10 py-2 px-3 text-sm font-medium text-white bg-gray-900 rounded-lg shadow-sm opacity-0 transition-opacity duration-300 tooltip dark:bg-gray-700">
                    <span>Choose between base10 (decimal) and base16 (hexadecimal)</span>
                </div>
                <div class="w-full">


                    <button id="subBtn" onclick="factorize()" class="mb-6 flex mx-auto text-white bg-indigo-500 border-0 py-2 px-8 focus:outline-none hover:bg-indigo-600 rounded text-lg">Submit</button>
                </div>
            </div>


            <!-- Output fields p and q -->
            <div class="w-full mt-6">
                <span class="text-2xl mr-3 dark:text-gray-100">p</span>
                <input id="p" placeholder="p" class="dark:bg-gray-600 dark:bg-opacity-20 focus:bg-transparent focus:ring-2 focus:ring-indigo-900 rounded border dark:border-gray-600 border-gray-300 focus:border-indigo-500 text-base outline-none dark:text-gray-100 py-1 px-3 leading-8 transition-colors duration-200 ease-in-out w-2/3"/>
            </div>
            <div class="w-full mt-6">
                <span class="text-2xl mr-3 dark:text-gray-100">q</span>
                <input id="q" placeholder="q" class="dark:bg-gray-600 dark:bg-opacity-20 focus:bg-transparent focus:ring-2 focus:ring-indigo-900 rounded border dark:border-gray-600 border-gray-300 focus:border-indigo-500 text-base outline-none dark:text-gray-100 py-1 px-3 leading-8 transition-colors duration-200 ease-in-out w-2/3"/>
            </div>
            <button class="rounded px-3 py-2 mt-4 inline-flex dark:text-gray-300 text-gray-600 dark:bg-gray-700 bg-gray-200 py-2 px-6 focus:outline-none dark:hover:bg-gray-600 hover:bg-gray-300 dark:hover:text-white rounded text-lg transition-colors duration-200 ease-in-out" onclick="sendToRSACrack()" id="redirectRSA">Send to RSA Cracker</button>


        </div>
    </div>
</section>


<script>
    // Hextoggle button styling change
    $("#nHEXToggle").click(function() {
        toggleHexButton($("#nDecimal"), $("#nHEX"));
    });
    
    // Checks if number is pasted and automatically changes state to hex if hex is pasted
    $("#num").bind('paste', function(e) {
        let data = e.originalEvent.clipboardData.getData('text');
        if (/[A-Za-z]/g.test(data)) {  // Check if pasted value is hex
            $("#nDecimal").css("font-weight", "normal");
            $("#nHEX").css("font-weight", "bold");
        }
        else{
            $("#nDecimal").css("font-weight", "bold");
            $("#nHEX").css("font-weight", "normal");
        }
    });
    
    // Submits form if enter is pressed
    $("#num").keypress(function(event) {
        if (event.keyCode === 13) {
            factorize();
        }
    });
    
    // Sends the value to crack site with the calculated values
    function sendToRSACrack() {
        let location = "/Home/RSACrack"
        let p = $("#p").val();
        let q = $("#q").val();
        if (p !== "" && q !== "") {
            location += `?p=${p}&q=${q}`;
        }
        window.location.href = location;
    }
    
    // Sends the data to backend with AJAX call and displays the returned result
    // If it returns an error, it displays an error message
    function factorize() {
        let num = $("#num").val();
        
        if (num.substring(0, 2) == "0x"){
            $("#nDecimal").css("font-weight", "normal");
            $("#nHEX").css("font-weight", "bold");
            num = num.substring(2);
        }
        
        if (!num.match(/^[0-9]+$/g) && $("#nDecimal").css("font-weight") == 700) {
            showSnackbar("Please enter a number", 1)
            return;
        }
        else if ($("#nHEX").css("font-weight") == 700) {
            num = hexToDecimal(num);
            if (num === -1) {
                showSnackbar("Invalid hex number", 1);
                return;
            }
        }
        
        $.ajax({
            url: "/api/GetFactors",
            type: "POST",
            data: {
                "inputNum": num,
            },
            success: function(data) {
                if (data[0] == -2 || data[1] == -2) { // If the returned data is -1, then it is an error
                    showSnackbar("FactorDB is currently offline", 0)
                    $("#p").val("");
                    $("#q").val("");
                    return;
                }
                if (data[0] == -1 || data[1] == -1) { // If the returned data is -1, then it is an error
                    showSnackbar("Invalid Input (could already be a prime number)", 0)
                    $("#p").val("");
                    $("#q").val("");
                    return;
                }
                $("#p").val(data[0]);
                $("#q").val(data[1]);
            }
        });
    }



</script>